@using Core.Models.Classes
@model Division

@using (Html.BeginForm("DivisionParticipants", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" role="form">
        @Html.HiddenFor(model => model.Id)
        @foreach (Participant participant in Model.Season.AdministrativeBody.Participants.Where(x => x.Participation == Model.ParticipationType))
        {
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="participantIds" class="" value="@participant.Id" @(Model.Partipants.Contains(participant) ? "checked" : string.Empty) />
                    @participant.Name
                </label>
            </div>
        }
        <input type="submit" class="btn btn-primary" value="Update" />
    </div>
}
