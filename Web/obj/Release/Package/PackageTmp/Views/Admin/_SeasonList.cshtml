@using Core.Models.Classes
@model AdministrativeBody

<div class="list-group">
    @foreach (Season season in Model.Seasons.OrderByDescending(x => x.From).ThenByDescending(x => x.To).Take(10))
    {
        @Html.ActionLink(season.Name, "Season", new { id = season.Id }, new { @class = "list-group-item" })
    }
    @if (Model.Seasons.Skip(10).Any())
    {
        @Html.ActionLink("...", "Seasons", new { id = Model.Id }, new { @class = "list-group-item" })
    }
    @Html.ActionLink("New", "CreateSeason", new { id = Model.Id }, new { @class = "list-group-item" })
</div>
