@using Core.Models.Classes
@model Season

@{
    Layout = "~/Views/Shared/_Default.cshtml";
}

@section Title
{
    @Model.Name Divisions
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a href="@Url.Action("AdministrativeBody", "Browse", new { id = @Model.AdministrativeBody.Id })">Season Selector</a></li>
            <li class="active">@Model.Name</li>
        </ol>
    </div>
</div>
<div class="row">
    @foreach (Division division in Model.Divisions.OrderBy(x => x.Sport).ThenBy(x => x.ParticipationType).ThenBy(x => x.CompetitionFormat).Take(10))
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="http://www.u3ajavea.org/Activity-Groups/Snooker/images/snooker.jpg" alt="@division.Name">
                <div class="caption">
                    <h3>@division.Name</h3>
                    <p>@division.ParticipationType @division.CompetitionFormat <span class="label label-default">@division.Sport</span></p>
                    <p>
                        <a href="@Url.Action("Division", "Browse", new { id = division.Id })" class="btn btn-primary" role="button">View</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>