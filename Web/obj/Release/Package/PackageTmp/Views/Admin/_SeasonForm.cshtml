@using Core.Models.Classes
@model Season

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" role="form">
        @Html.ValidationSummary(true)
        
        @if (!ViewData.ModelState.IsValid)
        {
            @Html.HiddenFor(model => model.Id)
        }
        @Html.HiddenFor(model => model.AdministrativeBodyId)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Name, new { @class="form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.From, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.From, new { Value = Model.From.ToString("dd/MM/yyyy"), @class="form-control date" })
                @Html.ValidationMessageFor(model => model.From)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.To, new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.To, new { Value = Model.To.ToString("dd/MM/yyyy"), @class="form-control date" })
                @Html.ValidationMessageFor(model => model.To)
            </div>
        </div>
        
